<h2 class="mb-4">Resend confirmation instructions</h2>

<p>
  Confirmation email didn't arrive? While we can't help you punch the Moogle who messed up your delivery,
  we can at least punt a new one in your general direction.
</p>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, data: { controller: "form--turnstile"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group field">
    <%= f.label :email, class: "form-label" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",
                      placeholder: eegg_random_npc_email,
                      value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  </div>

  <div class="d-flex justify-content-center">
    <%= render partial: "layouts/components/form_elements/turnstile_preflight", locals: { action: "resend_confirmation" } %>
  </div>
  <div class="form-group d-grid d-md-flex mt-2">
    <%= f.submit class: "btn btn-primary col-md-8 me-2" do %>
      Resend confirmation instructions
    <% end %>
    <%= link_to "Back To Login", new_user_session_path, class: "btn btn-secondary col" %>
  </div>
<% end %>