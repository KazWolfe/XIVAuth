<div class="row justify-content-center">
  <div class="col-md-4">
    <h2 class="mb-4">Sign Up for XIVAuth</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= flash[:recaptcha_error] %>

      <div class="form-group field mb-2">
        <%= f.label :email, class: "form-label" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "#{eegg_random_npc_email}" %>
        <div class="form-text">
          We hate marketing emails too. XIVAuth will only use your email for service notifications.
        </div>
      </div>

      <div data-controller="password-strength">
        <div class="form-group field mb-2">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control",
                               data: {
                                 "action": 'input->password-strength#calc',
                                 "password-strength-target": 'password'
                               } %>

          <div class="form-text text-secondary">
            <% min_req_pw_score = User.min_password_score %>
            <% high_pw_score = min_req_pw_score + 0.25 %>
            <meter value="0" max="4" optimum="4"
                   low="<%= min_req_pw_score - 0.25 %>" high="<%= high_pw_score > 4 ? 3.99 : high_pw_score %>"
                   class="password-strength-meter" data-password-strength-target="strength">foo</meter>
            <ul class="list-unstyled mb-0" data-password-strength-target="tips"></ul>
            <p>
              <abbr title="A rough guess as to how long it would take a very determined attacker to guess this password.">Time to crack</abbr>:
              <span data-password-strength-target="crackTime">unknown</span>.
            </p>
          </div>
        </div>

        <div class="form-group field mb-2">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",
                               data: {
                                 "action": "input->password-strength#onConfirm",
                                 "password-strength-target": 'confirm'
                               } %>
        </div>
      </div>

      <p>
        By signing up to XIVAuth, you agree to our <%= link_to "Terms of Service", legal_terms_path %> and
        <%= link_to "Privacy Policy", legal_privacy_path %>.
      </p>

      <%= invisible_recaptcha_tags ui: :invisible %>
      <div class="form-group d-grid d-md-flex mt-2 gap-2 mb-1">
        <button onclick="grecaptcha.execute()" class="btn btn-primary col-md-8">Sign Up</button>
        <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-secondary col" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>