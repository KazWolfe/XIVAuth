<%= turbo_stream.append "modal-character-verification-#{@character_registration.id}" do %>
  <%= turbo_stream_from "VerifyCharacterRegistrationJob_#{@job.job_id}" %>
<% end %>

<%= turbo_stream.update "modal-character-verification-#{@character_registration.id}-content" do %>
  <%= render partial: 'character_registrations/verifications/modals/verification_pending',
             locals: { registration: @character_registration, character: @character, job: @job } %>
<% end %>