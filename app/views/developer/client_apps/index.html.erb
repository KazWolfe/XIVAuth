<h1 class="mb-4">My Applications</h1>

<p><%= link_to new_developer_application_path, class: 'btn btn-primary' do %>
  <i class="bi bi-plus"></i> Create App
<% end %></p>

<div class="row">
  <% @applications.each do |app| %>
    <div class="col-md-6 col-xl-4 mb-2">
      <%= render 'app_card', application: app %>
    </div>
  <% end %>
</div>

