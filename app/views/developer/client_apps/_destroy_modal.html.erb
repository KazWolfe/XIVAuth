<%= form_with(url: developer_application_path(@application), method: :delete) do |f| %>
  <div class="modal-header">
    <h5 class="modal-title">Delete Application</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div data-controller="form--confirm" data-form--confirm-text-value="<%= @application.name %>">
    <div class="modal-body">
      <p>
        This will permanently delete <strong><%= @application.name %></strong>, all associated OAuth clients, and all
        associated data. This action cannot be undone.
      </p>
      <div class="mb-3">
        <label class="form-label fw-semibold" for="confirm_text">Type the application's name to confirm.</label>
        <input type="text" class="form-control" placeholder="<%= @application.name %>"
               data-form--confirm-target="input" data-action="input->form--confirm#validate"
               autocomplete="off" id="confirm_text" name="confirm_text">
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      <%= f.submit "Delete Application", class: "btn btn-danger",
                   data: { "form--confirm-target": "submit" } %>
    </div>
  </div>
<% end %>
