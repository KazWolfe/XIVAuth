<%= turbo_frame_tag (local_assigns[:modal_id] || "remote_modal"), target: "_top" do %>
  <div class="modal fade" tabindex="-1" data-controller="remote_modal" data-action="remote_modal#hideBeforeRender">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content" id="<%= (local_assigns[:modal_id] || "remote_modal") + (local_assigns[:content_tag] || "-content") %>">
        <%= yield %>
      </div>
    </div>
  </div>
<% end %>