<div class="row justify-content-center">
  <div class="col-md-9">
    <h2>Sign Up for XIVAuth</h2>
  </div>
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= flash[:recaptcha_error] %>

      <div class="form-group field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
      </div>

      <div class="form-group field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <div class="form-text">
          We hate marketing emails too. XIVAuth will only use your email for service notifications.
        </div>
      </div>

      <div class="form-group field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <p>By signing up to XIVAuth, you agree to our Terms of Service and Privacy Policy (lol).</p>

      <div class="form-group d-grid d-md-flex mt-2">
        <%= invisible_recaptcha_tags ui: :button, text: 'Sign up', class: 'btn btn-primary col-md-8 me-2' %>
        <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-secondary col" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
  <div class="col-md-1"></div>
  <div class="col-md-4">
    <p>Already have one of these services? Log in directly for quick registration and access!</p>
    <div class="d-grid gap-2">
      <%= render "users/shared/social" %>
    </div>
  </div>
</div>


