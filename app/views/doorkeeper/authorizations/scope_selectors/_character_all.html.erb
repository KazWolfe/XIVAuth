<label for="character_selector">Share the following:</label>
<select class="form-select" name="characters[]" id="character_selector" multiple>
  <% @current_resource_owner.character_registrations.verified.each do |registration| %>
    <% character = registration.character %>
    <option value="<%= character.lodestone_id %>" selected>
      <%= character.name %> @ <%= character.home_with_datacenter %>
    </option>
  <% end %>
</select>

<div class="form-check">
  <%= check_box_tag :share_new_characters, true, checked: true, class: 'form-check-input' %>
  <%= label_tag :share_new_characters, class: "form-check-label" do %>
    Automatically Share New Characters
  <% end %>
</div>