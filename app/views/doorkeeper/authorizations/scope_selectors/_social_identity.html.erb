<label for="social_identity_selector">Share the following:</label>
<select class="form-select" name="social_identities[]" id="social_identity_selector" multiple>
  <% @current_resource_owner.social_identities.each do |identity| %>
    <option value="<%= identity.id %>" selected>(<%= identity.provider %>) <%= identity.friendly_name %></option>
  <% end %>
</select>

<div class="form-check">
  <%= check_box_tag :share_new_identities, true, checked: true, class: 'form-check-input' %>
  <%= label_tag :share_new_identities, class: "form-check-label" do %>
    Automatically Share New Identities
  <% end %>
</div>