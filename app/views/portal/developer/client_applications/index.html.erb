<h1>Client Applications</h1>
<a class="btn btn-primary" href="<%= new_developer_client_application_path %>" role="button">New Application</a>
<table class="table">
  <thead>
  <tr>
    <th scope="col">Application Name</th>
    <th scope="col">Owner</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <% @applications.each do |application| %>
    <tr>
      <td><%= link_to application.name, developer_client_application_path(application) %></td>
      <td><%= application.owner == current_user ? "You" : application.owner.name %></td>
      <td>
        No actions.
      </td>
    </tr>
  <% end %>
</table>